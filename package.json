{
  "name": "brunch",
  "description": "Fast front-end web app build tool with simple declarative config, seamless incremental compilation for rapid development, an opinionated pipeline and workflow, and core support for source maps",
  "version": "3.0.0-pre",
  "keywords": [
    "assembler",
    "builder",
    "stack",
    "pipeline",
    "build tool",
    "workflow",
    "source map",
    "incremental",
    "config",
    "react",
    "webpack",
    "browserify",
    "grunt",
    "gulp",
    "broccoli",
    "backbone",
    "ember",
    "angular",
    "chaplin",
    "html5"
  ],
  "homepage": "https://brunch.io/",
  "author": "Brunch team (https://brunch.io)",
  "repository": "https://github.com/brunch/brunch.git",
  "bugs": "https://github.com/brunch/brunch/issues",
  "license": "MIT",
  "main": "./lib/index",
  "files": [
    "bin",
    "lib"
  ],
  "bin": {
    "brunch": "bin/brunch"
  },
  "scripts": {
    "lint": "eslint bin/brunch lib test",
    "test": "ava -s",
    "test:coverage": "LOGGY_STACKS=1 nyc ava -s && nyc report --reporter=html"
  },
  "engines": {
    "node": ">= 10.16"
  },
  "dependencies": {
    "anymatch": "^2.0",
    "anysort": "~1.0",
    "chokidar": "github:paulmillr/chokidar#584fe1fdc0b1b1bd77a560a77908dc9f003b1713",
    "commander": "~2.20",
    "commonjs-require-definition": "~0.6.2",
    "debug": "^4.1.1",
    "deppack": "github:brunch/deppack",
    "fcache": "~0.3",
    "init-skeleton": "github:brunch/init-skeleton",
    "loggy": "~1.0.8",
    "micro-check-dependencies": "~0.2.0",
    "serve-brunch": "~0.2",
    "since-app-start": "~0.3",
    "skemata": "~0.1",
    "source-map": "~0.5",
    "universal-path": "^0.1"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.6.0",
    "eslint-config-brunch": "^1.0.0",
    "eslint-config-prettier": "^6.5.0",
    "fixturify": "^0.2",
    "fs-extra": "^0.30",
    "nyc": "^13.0.0",
    "rewire": "^2.5",
    "test-console": "^1"
  },
  "eslintConfig": {
    "extends": "brunch",
    "parserOptions": {
      "ecmaVersion": "2020"
    },
    "rules": {
      "comma-dangle": 0
    }
  },
  "ava": {
    "files": [
      "test/*.js",
      "!test/_*.js"
    ],
    "failFast": true,
    "verbose": true
  }
}
